<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_topnews_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black_bg"
            android:text="tiletitleitleitle"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:textSize="10sp"
                android:textColor="@color/md_grey_600_color_code"
                android:id="@+id/tv_topnews_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="shijian"/>

            <TextView
                android:textSize="10sp"
                android:textColor="@color/md_grey_600_color_code"
                android:id="@+id/tv_topnews_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="zuozhe"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_topnews"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="1"/>
</LinearLayout>